    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/node_modules/yo/lib/cli.js",
            "args": [
                "wsc-package"
            ],
            "console": "externalTerminal",
            "preLaunchTask": "Compile",
            "cwd": "${workspaceFolder}/../../Privat",
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "preLaunchTask": "Compile",
            "cwd": "${workspaceFolder}",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js",
                "${workspaceFolder}/packageLib/lib/**/*.js"
            ]
        }
    ]
}