{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "rootDir": "./src",
        "outDir": "./lib",
        "plugins": [
            {
                "name": "@manuth/typescript-eslint-plugin"
            },
            {
                "transform": "ts-nameof",
                "type": "raw"
            }
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/tests/**/*"
    ]
}
