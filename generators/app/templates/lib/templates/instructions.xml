<% for (let instruction of InstructionCollection) { %><%
    %><%switch (instruction.constructor.name) { case "FilesInstruction": %>
        <instruction<%
        %> type="file"<%
            %><% if (instruction.Application) { %><%
                %> application="<%= instruction.Application %>"<%
            %><% } %>><%
            %><%= instruction.FileName %></instruction><%
        %><% break; %><%
        %><% case "OptionsInstruction": %>
        <instruction type="option"><%= ComponentsPath %>/<%= instruction.FileName %></instruction>
        <instruction type="language"><%= ComponentsPath %>/<%= instruction.TranslationsDirectory %>/*.xml</instruction><%
        %><% break; %><%
        %><% case "EventListenersInstruction": %>
        <instruction type="eventListener"><%= ComponentsPath %>/<%= instruction.FileName %></instruction><%
        %><% break; %><%
        %><% case "TranslationsInstruction": %>
        <instruction type="language"><%= ComponentsPath %>/<%= instruction.FileName %>/*.xml</instruction><%
        %><% break; %><%
        %><% case "StyleInstruction": %>
        <instruction type="style"><%= StylesPath %>/<%= instruction.FileName %></instruction><%
        %><% break; %><%
        %><% case "TemplatesInstruction": %>
        <instruction<%
        %> type="template"<%
            %><% if (instruction.Application) { %><%
                %> application="<%= instruction.Application %>"<%
            %><% } %>><%
                %><%= instruction.FileName %><%
            %></instruction><%
        %><% break; %><%
        %><% case "ACPTemplatesInstruction": %>
        <instruction<%
        %> type="acpTemplate"<%
            %><% if (instruction.Application) { %><%
                %> application="<%= instruction.Application %>"<%
            %><% } %>><%
                %><%= instruction.FileName %><%
            %></instruction><%
        %><% break; %><%
        %><% case "TemplateListenersInstruction": %>
        <instruction type="templateListener"><%= ComponentsPath %>/<%= instruction.FileName %></instruction><%
        %><% break; %><%
        %><% case "EmojisInstruction": %>
        <instruction type="smiley"><%= ComponentsPath %>/<%= instruction.FileName %></instruction><%
        %><% break; %><%
    %><% } %><%
%><% } %>