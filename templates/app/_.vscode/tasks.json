{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch",
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Compile",
            "type": "npm",
            "script": "compile",
            "problemMatcher": "$tsc",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "npm",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "run",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Compile"
        }
    ]
}