import Path = require("path");
import { IPackageOptions } from "<%- relativePackage %>System/PackageSystem/IPackageOptions";
import { ThemeInstructionCollection } from "<%- relativePackage %>System/Customization/Presentation/Themes/ThemeInstructionCollection";
import { RequiredPackageDescriptor } from "<%- relativePackage %>System/PackageSystem/RequiredPackageDescriptor";

let pkg: IPackageOptions = {
    Identifier: "<%= Settings.identifier %>",
    Name: "<%= Settings.name %>",
    DisplayName: {
        inv: "<%= Settings.displayName %>"
    },
    Version: "0.0.0",
    Author: {
        Name: "<%= Settings.author %>",
        URL: "<%= Settings.authorURL %>"
    },
    License: null,
    CreationDate: new Date("<% let date = new Date(); %><%=
        date.getFullYear() + "-" +
        (date.getMonth() + 1).toString().padStart(2, "0") + "-" +
        date.getDate().toString().padStart(2, "0") %>"),
    Description: {
        inv: "<%= Settings.description %>"
    },
    InstallSet: {
        Instructions: [<%
            let items = [];

            for (let component of components)
            {
                let optionName = "";
                let item = "";
                let formatter;

                let defaultFormatter = (value) =>
                {
                    return "require(\"" + value + "\")";
                };

                switch (component)
                {
                    case "themes":
                        formatter = (value) =>
                        {
                            return "...new ThemeInstructionCollection(Path.join(__dirname, \"" + value + "\"))";
                        };
                        break;
                    case "files":
                    case "php":
                    case "sql":
                    case "templates":
                    case "acpTemplates":
                        formatter = (value) =>
                        {
                            return "// " + defaultFormatter(value);
                        };
                        break;
                    default:
                        formatter = defaultFormatter;
                        break;
                }

                items.push(formatter(componentPaths[component]));
            }
        %>
            <%- items.join(`,
            `) %>
        ]
    },
    RequiredPackages: [
        new RequiredPackageDescriptor({
            Identifier: "com.woltlab.wcf",
            MinVersion: "3.0.0"
        })
    ]
};

export = pkg;