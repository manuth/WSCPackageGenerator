{
  "name": "@manuth/generator-wsc-package",
  "version": "2.2.1",
  "description": "A Generator for WoltLab Suite Core Packages.",
  "author": "Manuel Thalmann <m@nuth.ch>",
  "license": "MIT",
  "keywords": [
    "Woltlab Suite Core",
    "Package",
    "yeoman-generator"
  ],
  "homepage": "https://github.com/manuth/WSCPackageGenerator#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manuth/WSCPackageGenerator.git"
  },
  "bugs": {
    "url": "https://github.com/manuth/WSCPackageGenerator/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "ttsc -b tsconfig.build.json",
    "rebuild": "npm run clean && npm run build",
    "watch": "npm run build -- --watch",
    "clean": "npm run build -- --clean && rimraf ./lib",
    "lint-base": "eslint --max-warnings 0 --ignore-pattern \"!.eslintrc.js\"",
    "lint": "npm run lint-base -- --ext .js,.jsx,.ts,.tsx ./src .eslintrc.js",
    "lint-ide": "npm run lint || exit 0",
    "test": "mocha",
    "prepare": "npm run rebuild"
  },
  "dependencies": {
    "@manuth/extended-yo-generator": "^8.0.4",
    "@manuth/generator-ts-project": "^2.0.4",
    "@manuth/package-json-editor": "^1.4.7",
    "chalk": "^4.1.1",
    "dedent": "^0.7.0",
    "fs-extra": "^10.0.0",
    "inquirer": "^8.1.0",
    "lodash.kebabcase": "^4.1.1",
    "ts-morph": "^11.0.0",
    "upath": "^2.0.1",
    "yosay": "^2.0.2"
  },
  "devDependencies": {
    "@manuth/eslint-plugin-typescript": "^3.0.2",
    "@manuth/tsconfig": "^2.0.0",
    "@manuth/typescript-eslint-plugin": "^1.3.6",
    "@manuth/woltlab-compiler": "^2.0.1",
    "@types/dedent": "^0.7.0",
    "@types/fs-extra": "^9.0.11",
    "@types/inquirer": "^7.3.1",
    "@types/lodash.kebabcase": "^4.1.6",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.6.1",
    "@types/npm": "^2.0.31",
    "@types/ts-nameof": "^4.2.1",
    "@types/yeoman-test": "^4.0.1",
    "@types/yosay": "2.0.0",
    "eslint": "^7.27.0",
    "mocha": "^8.4.0",
    "rimraf": "^3.0.2",
    "ts-nameof": "^5.0.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.3.2",
    "yeoman-test": "^6.1.0",
    "yo": "^4.2.0"
  }
}
